extends auth

block auth
  form.signin.form-horizontal(action="/users/session", method="post", role="form")
    p.error= message
    .form-group
      label.control-label(for='email') Email
      .controls
        input#email.form-control(type='text', name="email", placeholder='Email', ng-model="email")

    .form-group
      label.control-label(for='password') Password
      .controls
        input#password.form-control(type='password', name="password", placeholder='Password', ng-model="password")

    .form-actions
      button.btn.btn-primary(type='submit') Sign in
      &nbsp;
      | or&nbsp;
      a.show-signup(href="/signup") Sign up
